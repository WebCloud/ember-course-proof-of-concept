<p style="width: 100%; text-align: right">
  Hello, {{#link-to 'user.update' class="subtle"}}{{currentUser.name}}{{/link-to}}
  <button class="subtle" {{action 'logout'}}>logout</button>
</p>
<div class="todos">
  {{render "todo/create" todo}}
  <br />
  <div class="centered {{currentFilter}}">
    <button class="subtle is-active" {{action 'changeFilter' 'active'}}>to do</button>
    <button class="subtle is-innactive" {{action 'changeFilter' 'innactive'}}>done</button>
  </div>
  <br />
  {{render "todo/index" currentTodos}}
</div>
